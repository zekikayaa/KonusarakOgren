@using TestApp.Domains.ViewModel
@model List<TestViewModel>

@*
    For more information on enabling MVC for empty projects, visit https://go.microsoft.com/fwlink/?LinkID=397860
*@

@{
    
      var counter = 1;
}



<h2>Create test by using last news</h2>

<table class="table table-bordered">
    <thead>
        <tr>
            <th scope="col">#</th>
            <th scope="col">Title</th>
            <th scope="col">Date</th>

        </tr>
    </thead>
    <tbody>
        @foreach (var test in Model)
        {
            <tr>
                <th scope="row">@counter</th>
                <td>@test.PostTitle</td>
                <td>@test.CreatedDate</td>
                <td>   <a class="btn btn-primary" href="/StartTest?testId=@test.Id" >Start Test</a> </td>
                @*<td>   <a class="btn btn-primary" asp-controller="Home" asp-action="CreateTest" asp-route-postId="@post.Id">Create Test</a> </td>*@
            </tr>

            counter++;
        }

    </tbody>
</table>